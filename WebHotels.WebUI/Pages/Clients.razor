@page "/clients"

<PageTitle>Clients</PageTitle>
<div class="row" style="margin-bottom: 1rem">
    <div class="col-12 col-md-6">
        <RadzenText Text="Clients" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
    </div>
    <div class="col-12 col-md-6 justify-content-start justify-content-md-end" style="display: flex; align-items: center; flex-wrap: wrap; gap: 0.5rem">
    <RadzenButton Icon="add_circle_outline" style="margin-bottom: 10px" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true"
            Data="@clients"    TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Property="Id" Title="Id">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Property="Name" Title="Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Property="Surname" Title="Surname">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Property="Email" Title="Email">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Property="Gender" Title="Gender">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Property="Nationality" Title="Nationality">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Property="IsVIP" Title="Is V I P">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="WebHotels.WebUI.Models.WebHotelsDB.Client" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                    <Template Context="client">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, client)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
</div>
